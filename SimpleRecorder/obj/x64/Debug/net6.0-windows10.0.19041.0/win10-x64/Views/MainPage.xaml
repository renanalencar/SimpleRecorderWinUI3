<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SimpleRecorder.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleRecorder.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style 
            TargetType="ComboBox" 
            x:Key="OptionComboBoxStyle">
            <Setter 
                Property="Margin" 
                Value="5" />
            <Setter 
                Property="MinWidth" 
                Value="150" />
            <Setter 
                Property="HorizontalAlignment" 
                Value="Center" />
        </Style>
        <Style 
            TargetType="CheckBox" 
            x:Key="OptionCheckBoxStyle">
            <Setter 
                Property="Margin" 
                Value="5" />
            <Setter 
                Property="MinWidth" 
                Value="150" />
            <Setter 
                Property="HorizontalAlignment" 
                Value="Center" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid x:ConnectionId='2' 
            x:Name="PreviewContainerGrid" 
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='14' 
                x:Name="CaptureInfoTextBlock" 
                Text="Pick something to capture" 
                Style="{StaticResource SubtitleTextBlockStyle}" 
                HorizontalAlignment="Stretch" 
                HorizontalTextAlignment="Center" 
                VerticalAlignment="Bottom" />

            <Grid x:ConnectionId='15' 
                x:Name="CapturePreviewGrid" 
                Margin="15" Grid.Row="1" 
                Visibility="Collapsed" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" />

            <Button x:ConnectionId='16' 
                x:Name="CaptureButton" 
                Grid.Row="2" 
                Margin="5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                                           >
                <FontIcon 
                    Glyph="&#xE8FC;" 
                    FontFamily="Segoe MDL2 Assets" 
                    FontSize="24"  />
            </Button>
        </Grid>

        <Grid 
            Grid.Column="1">
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
                <TextBlock 
                    Text="Options" 
                    Style="{StaticResource SubtitleTextBlockStyle}" 
                    HorizontalAlignment="Stretch" 
                    HorizontalTextAlignment="Center" />
                <ComboBox x:ConnectionId='4' 
                    x:Name="ResolutionComboBox" 
                    Style="{StaticResource OptionComboBoxStyle}" 
                    Header="Resolution" 
                    ToolTipService.ToolTip="Resolution">
                    <ComboBox.ItemTemplate>
                        <DataTemplate 
                                                             >
                            <TextBlock x:ConnectionId='13' 
                                                            />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox x:ConnectionId='5' 
                    x:Name="BitrateComboBox" 
                    Style="{StaticResource OptionComboBoxStyle}" 
                    Header="Bit Rate" 
                    ToolTipService.ToolTip="Bitrate">
                    <ComboBox.ItemTemplate>
                        <DataTemplate 
                                                          >
                            <TextBlock x:ConnectionId='11' 
                                                            />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox x:ConnectionId='6' 
                    x:Name="FrameRateComboBox" 
                    Style="{StaticResource OptionComboBoxStyle}" 
                    Header="Frame Rate" 
                    ToolTipService.ToolTip="Frame Rate">
                    <ComboBox.ItemTemplate>
                        <DataTemplate 
                                                            >
                            <TextBlock x:ConnectionId='9' 
                                                            />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <CheckBox x:ConnectionId='7' 
                    x:Name="IncludeCursorCheckBox" 
                    Style="{StaticResource OptionCheckBoxStyle}" 
                    Content="Include the cursor" 
                    Visibility="Collapsed" 
                    IsChecked="true" />
            </StackPanel>
        </Grid>

        <Grid 
            Grid.Row="1" 
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='3' 
                x:Name="StartRecordingButton" 
                Grid.Column="1" 
                Content="Start Recording" 
                HorizontalAlignment="Center" 
                Margin="15" 
                IsEnabled="False" 
                                                   
                Style="{ThemeResource AccentButtonStyle}" />
        </Grid>

    </Grid>
</Page>

